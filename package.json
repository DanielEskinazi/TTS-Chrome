{
  "name": "tts-chrome-extension",
  "version": "0.1.0",
  "description": "Text-to-Speech Chrome Extension with advanced features",
  "private": true,
  "scripts": {
    "dev": "webpack --mode development --watch",
    "dev:reload": "webpack --mode development --watch & node scripts/reload-extension.js",
    "build": "webpack --mode production",
    "build:analyze": "webpack-bundle-analyzer dist/stats.json",
    "clean": "rm -rf dist",
    "lint": "eslint \"src/**/*.ts\"",
    "lint:fix": "eslint \"src/**/*.ts\" --fix",
    "format": "prettier --write src/**/*.{ts,css,json}",
    "format:check": "prettier --check src/**/*.{ts,css,json}",
    "type-check": "tsc --noEmit",
    "typecheck": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "pre-commit": "npm run lint && npm run type-check && npm run test",
    "chrome:launch": "node scripts/launch-chrome.js",
    "security:audit": "npm audit --audit-level high",
    "security:check": "npm audit --json | jq '.metadata.vulnerabilities'"
  },
  "keywords": [
    "chrome-extension",
    "text-to-speech",
    "tts",
    "accessibility"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "@microsoft/eslint-formatter-sarif": "^3.1.0",
    "@types/chrome": "^0.0.268",
    "@types/jest": "^29.5.10",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "autoprefixer": "^10.4.21",
    "chokidar": "^4.0.3",
    "clean-webpack-plugin": "^4.0.0",
    "copy-webpack-plugin": "^11.0.0",
    "css-loader": "^7.1.2",
    "depcheck": "^1.4.7",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.0.2",
    "license-checker": "^25.0.1",
    "madge": "^7.0.0",
    "postcss": "^8.5.6",
    "postcss-loader": "^8.1.1",
    "prettier": "^3.1.0",
    "style-loader": "^4.0.0",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.2",
    "webpack": "^5.89.0",
    "webpack-bundle-analyzer": "^4.10.2",
    "webpack-cli": "^5.1.4",
    "ws": "^8.18.2"
  },
  "dependencies": {}
}
